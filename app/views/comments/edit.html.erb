<!-- Validation failure messages -->

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Comment #<%= @comment.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_comment/<%= @comment.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for daily_note_id -->
          <div class="form-group">
            <label for="daily_note_id" class="col-sm-2 control-label">
              Daily note
            </label>
            <div class="col-sm-10">
              <input type="text" id="daily_note_id" name="daily_note_id" placeholder="Daily note" class="form-control" value="<%= @comment.daily_note_id %>">
            </div>
          </div>

          <!-- Label and input for text -->
          <div class="form-group">
            <label for="text" class="col-sm-2 control-label">
              Text
            </label>
            <div class="col-sm-10">
              <input type="text" id="text" name="text" placeholder="Text" class="form-control" value="<%= @comment.text %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Comment
              </button>
              or
              <a href="/comments/<%= @comment.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
